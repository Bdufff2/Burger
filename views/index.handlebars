<h1>Burgers</h1>

<h2>Burgers</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{!-- {{> cats/cat-block sleep=true}} --}}
    {{/unless}}
  {{/each}}
</ul>
<h2>Devoured</h2>
<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>
<h2>Build Your Own Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Type:</label>
    <input type="text" id="burg" name="name">
  </div>

